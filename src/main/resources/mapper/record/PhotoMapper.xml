<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fxj.recordmanager.mapper.record.PhotoMapper">
    <select id="getPhotoListByAlbumId" resultType="com.fxj.recordmanager.entity.dao.record.Photo">
        SELECT * FROM record_photo
        WHERE album_id = #{albumId}
        AND deleted = 0
        ORDER BY gmt_create DESC
    </select>
</mapper>