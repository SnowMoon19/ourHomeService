<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fxj.recordmanager.mapper.record.AlbumMapper">
    <insert id="addAlbum" useGeneratedKeys="true" keyProperty="albumId">
        INSERT INTO record_album (name, creator_id)
        VALUES (#{name}, #{creatorId})
    </insert>

    <delete id="deleteAlbum">
        DELETE FROM record_album
        WHERE album_id = #{albumId}
    </delete>

    <select id="getAlbumListByUserId" resultType="com.fxj.recordmanager.entity.dao.record.Album">
        SELECT * FROM record_album
        WHERE (creator_id = #{userId} OR creator_id = #{anotherId})
          AND deleted = 0
    </select>
</mapper>